
<div id="brand-dashboard">

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header navigating">
                <%= image_tag("hash-money-logo-2.png") %>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Hello <%= current_brand.username.capitalize %>  <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="#"><i class="fa fa-user fa-fw"></i> User Profile</a>
                        </li>
                        <li><a href="#"><i class="fa fa-gear fa-fw"></i> Settings</a>
                        </li>
                        <li>
                        <% if current_brand %>
                            <%= link_to 'Log Out', destroy_session_path(current_brand), method: 'delete' %>
                        <% else %>
                            <a href="" class="js-open-modal">Brand Login</a>
                        <% end %>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li class="">
                            <a href="/brands/dashboard"><i class="fa fa-tasks fa-fw"></i> Create New Campaign</a>
                        </li>
                        <li class="">
                            <a href="/brands/campaigns/in_progress"><i class="fa fa-spinner fa-fw"></i> Campaigns in Progress</a>
                        </li>
                        <li class="">
                            <a href="#"><i class="fa fa-check fa-fw"></i> Completed Campaigns</a>
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Create New Campaign</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-4 js-form-card">
                    <div class="wrapper">
                       <div class="hover panel">
                          <div class="front">
                            <div class="box1 panel-body">
                              <h1>Create<br>New Campaign</h1>
                                <i class="fa fa-plus fa-fw add-icon"></i>
                            </div>
                          </div>
                          <div class="back">
                            <div class="box2 panel-body">
                              <%= form_for(@campaign) do |f| %>
                              <%= devise_error_messages! %>

                            <div class="field">
                                <%= f.label :industry, 'Interests' %><br>
                                <%= f.collection_select(:industry, Industry.all, :name, :name, :class => "target-industry")%>
                              </div>
                              <br>
                              <div class="field">
                                <%= f.label :hashtag, 'Hashtags' %><br>
                                <%= f.text_field :hashtag, autocomplete: "off", :class => "target-hashtag" %>
                              </div>
                              <br>
                              <div class="field">
                                <%= f.label :age_group, 'Age Group' %><br>
                                <%= f.text_field :age_group, autocomplete: "off", :class => "target-age-group" %>
                              </div>
                              <br>
                              <div class="field">
                                <%= f.label :demographic, 'Demographic' %><br>
                                <%= f.text_field :demographic, autocomplete: "off", :class => "target-demographic" %>
                              </div>
                              <br>
                              <div class="field">
                                <%= f.label :location, 'Location' %><br>
                                <%= f.text_field :location, autocomplete: "off", :class => "target-location" %>
                              </div>

                              <div class="actions">
                                <br>
                                <%= f.submit "Create", :class => "create-btn js-add-campaign" %>
                              </div>
                            <% end %>

                            </div>
                          </div>
                      </div>
                </div>

                </div>
                <!-- /.col-lg-4 -->
                
                <% @brands_campaigns.each do |campaign| %>
                
                <div class="col-lg-4">
                    <div class="wrapper">
                       <div class="hover panel">
                          <div class="front">
                            <div class="box1 panel-body">
                              <h1>#<%= campaign.hashtag %></h1>
                              <i class="fa fa-eye fa-fw add-icon"></i>
                              <h4>View Campaign</h4>
                            </div>
                          </div>
                          <div class="back">
                            <div class="box2 panel-body">
                              <h3 class="campaign-details">Campaign Details</h3>
                              <ul>
                                <p>Industry: <%= campaign.industry %></p>
                                <p>Hashtag: #<%= campaign.hashtag %></p>
                                <p>Age Group: <%= campaign.age_group %></p>
                                <p>Demographic: <%= campaign.demographic %></p>
                                <p>Location: <%= campaign.location %></p>

                                <p><button><%= link_to('Campaign complete?', brands_tweets_complete_path(campaign)) %></button></p>
                                <p><button><%= link_to('Delete', brands_campaigns_delete_path(campaign), method: :delete, data: { confirm: 'Are you sure?'}) %></button></p>
        
                              </ul>
                            </div>
                          </div>
                        </div>
                    </div>
                </div>  

                <% end %>
                <!-- /.col-lg-4
            </div>
            <!-- /.row -->
            
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->


</div>


