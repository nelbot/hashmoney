

<div id="brand-dashboard">

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header navigating">
                <%= image_tag("hash-money-logo-2.png") %>
            </div>
            <!-- /.navbar-header -->
            <ul class="nav navbar-top-links navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Welcome <%= current_influencer.username.capitalize %>  <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="#"><i class="fa fa-user fa-fw"></i> User Profile</a>
                        </li>
                        <li><a href="#"><i class="fa fa-gear fa-fw"></i> Settings</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                        <% if current_influencer %>
                        <%= link_to 'Log Out', destroy_session_path(current_influencer), method: 'delete' %>
                        <% else %>
                            <a href="" class="js-open-modal-2">Influencer Login</a>
                        <% end %>
                    </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li class="">
                            <a href="/influencers/campaigns/<%= current_influencer.industry %>"><i class="fa fa-tasks fa-fw"></i> Available Campaigns</a>
                        </li>
                        <li class="">
                            <a href="/influencers/dashboard/"><i class="fa fa-spinner fa-fw"></i> Campaigns in Progress</a>
                        </li>
                        <li>
                            <a href="forms.html"><i class="fa fa-check fa-fw"></i> Completed Campaigns</a>
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Campaigns in Progress</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <% @your_campaigns.each do |campaign| %>
                <div class="col-lg-4">
                    <div class="wrapper">
                       <div class="hover panel">
                          <div class="front">
                            <div class="box1 panel-body">
                              <h1>#<%= campaign.hashtag %></h1>
                                <i class="fa fa-eye fa-fw add-icon"></i>
                                <h4>View Campaign</h4>
                            </div>
                          </div>
                          <div class="back">
                            <div class="box2 panel-body">
                                <h3 class="campaign-details">Campaign Details</h3>
                                  <ul>
                                    <p>Industry: <%= campaign.industry %></p>
                                    <p>Hashtag: #<%= campaign.hashtag %></p>
                                    <p>Age Group: <%= campaign.age_group %></p>
                                    <p>Demographic: <%= campaign.demographic %></p>
                                    <p>Location: <%= campaign.location %></p>
                                  </ul>     
                            </div>
                          </div>
                      </div>
                  </div>
                </div>
                <% end %>
                <!-- /.col-lg-4 -->
                <div class="col-lg-4">
                    
                </div>
                <!-- /.col-lg-4 -->
                <div class="col-lg-4">
                    
                </div>
                <!-- /.col-lg-4 -->
            </div>
            <!-- /.row -->
            
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->

</div>


