            </div>
          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div><!-- /.modal -->

      <div class="modal fade js-login-modal">
        <div class="modal-dialog">
          <div class="modal-content center">
            <div class="modal-header">
              <h1>Welcome Back!</h1>
            </div>
            <div class="modal-body">
              <h1><a href="<%= new_brand_session_path %>" class="createBrandButton js-open-login-brand-modal">Brand</a></h1>
              <p>or</p>
              <h1><a href="<%= new_influencer_session_path %>" class="createInfluencerButton js-open-login-influencer-modal">Influencer</a></h1>
            </div>
          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div><!-- /.modal -->

      <div class="modal fade js-login-brand-modal">
          <div class="modal-dialog">
            <div class="modal-content center">

              <div class="modal-header">
                <!-- Close button -->
                
                </button>
              </div>

              <div class="modal-body">
                <h2>Log in as a Brand</h2>

                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <br>
                    <div class="field">
                      <%= f.label :email %><br />
                      <%= f.email_field :email, autofocus: true %>
                    </div>
                    <br>
                    <div class="field">
                      <%= f.label :password %><br />
                      <%= f.password_field :password, autocomplete: "off" %>
                    </div>
                    <br>
                    <% if devise_mapping.rememberable? -%>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                      </div>
                    <% end -%>
                    <br>

                    <div class="actions">
                      <%= f.submit "Log In" %>
                    </div>
                    <br>
                  <% end %>

                
              </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->

        <div class="modal fade js-login-influencer-modal">
          <div class="modal-dialog">
            <div class="modal-content center">

              <div class="modal-header">
                <!-- Close button -->
                
                </button>
              </div>

              <div class="modal-body">
                <h2>Log In as an Influencer</h2>

                  <%= form_for(influencer, as: influencer_resource_name, url: session_path(influencer_resource_name)) do |f| %>
                    <br>
                    <div class="field">
                      <%= f.label :email %><br />
                      <%= f.email_field :email, autofocus: true %>
                    </div>
                    <br>
                    <div class="field">
                      <%= f.label :password %><br />
                      <%= f.password_field :password, autocomplete: "off" %>
                    </div>
                    <br>
                    <% if devise_mapping.rememberable? -%>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                      </div>
                    <% end -%>
                    <br>
                    <div class="actions">
                      <%= f.submit "Log In" %>
                    </div>
                  <% end %>
                    <br>


              </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->


        <div class="modal fade js-modal">
          <div class="modal-dialog">
            <div class="modal-content center">

              <div class="modal-header">
                <!-- Close button -->
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span>&times;</span>
                </button>

                <h2>Get Started as a Brand</h2>
              </div>

              <div class="modal-body">
                <h2>Sign up</h2>

                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                      <%= devise_error_messages! %>
                      <br>
                      <div class="field">
                        <%= f.label :email %><br />
                        <%= f.email_field :email, autofocus: true %>
                      </div>
                      <br>
                      <div class="field">
                        <%= f.label :username %><br />
                        <%= f.text_field :username, autocomplete: "off" %>
                      </div>
                      <br>
                      <div class="field">
                        <%= f.label :password %>
                        <% if @validatable %>
                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                        <% end %><br />
                        <%= f.password_field :password, autocomplete: "off" %>
                      </div>
                      <br>
                      <div class="field">
                        <%= f.label :password_confirmation %><br />
                        <%= f.password_field :password_confirmation, autocomplete: "off" %>
                      </div> 
                      <br>
                      <div class="actions">
                        <%= f.submit "Sign up" %>
                      </div>
                    <% end %>
                    <br>
                    <%= link_to "Log In", new_brand_session_path %>

              </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->

        <div class="modal fade js-modal-2">
          <div class="modal-dialog">
            <div class="modal-content center">

              <div class="modal-header">
                <!-- Close button -->
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span>&times;</span>
                </button>

                <h2>Get Started as an Influencer</h2>
              </div>

              <div class="modal-body">
                <h2>Sign up</h2>

                    <%= form_for(influencer, as: influencer_resource_name, url: registration_path(influencer_resource_name)) do |f| %>
                      <%= devise_error_messages! %>
                      <br>
                      <div class="field">
                        <%= f.label :email %><br />
                        <%= f.email_field :email, autofocus: true %>
                      </div>
                      <br>
                      <div class="field">
                        <%= f.label :username %><br />
                        <%= f.text_field :username, autocomplete: "off" %>
                      </div>
                      <br>
                      <div class="field">
                        <%= f.label :password %>
                        <% if @validatable %>
                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                        <% end %><br />
                        <%= f.password_field :password, autocomplete: "off" %>
                      </div>
                      <br>
                      <div class="field">
                        <%= f.label :password_confirmation %><br />
                        <%= f.password_field :password_confirmation, autocomplete: "off" %>
                      </div>
                      <br>
                      <div class="field">
                        <%= f.label :age %><br />
                        <%= f.text_field :age, autocomplete: "off" %>
                      </div>
                      <br>
                      <div class="field">
                        <%= f.label :occupation %><br />
                        <%= f.text_field :occupation, autocomplete: "off" %>
                      </div>
                      <br>
                      <div class="field">
                        <%= f.label :location %><br />
                        <%= f.text_field :location, autocomplete: "off" %>
                      </div>
                      <br>
                      <div class="field">
                        <%= f.label :industry, 'Interests' %><br>
                        <%= f.collection_select(:industry, Industry.all, :name, :name, :class => "target-industry")%>
                      </div>
                      <br>
                      <div class="actions">
                        <%= f.submit "Sign up" %>
                      </div>
                    <% end %>
                    <br>
                    <%= link_to "Log In", new_influencer_session_path %><br>
                    <%= link_to "Forgot your password?", new_influencer_password_path %>
                    
              </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    </div>




        